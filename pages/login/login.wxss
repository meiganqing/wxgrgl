page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

/*登录图片*/

.login-icon {
  flex: none;
  height: 450rpx;
flex-direction: column

}

.login-img {
  width: 450rpx;
  position: relative;
top: 97rpx;

height: 169px;

}

/*表单内容*/

.login-from {
  margin-top: 20px;
  flex: auto;
  height: 100%;
}

.inputView {
  background-color: #f2f2f2;
  line-height: 44px;
  margin-top: 20rpx;
border-radius: 10rpx;

}

/*输入框*/

.nameImage, .keyImage {
  margin-left: 22px;
  width: 14px;
  height: 14px;
}

.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 14px;
}

.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  color: #ccc;
  font-size: 14px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
  margin-top: 1px;
}

/*按钮*/

.loginBtnView {
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}

.loginBtn {

  margin-top: 35px;
  width: 100%;
  background-color: rgb(58, 130, 244) !important;


}
.loginLogo-img{
  width: 250rpx;
height: 100rpx;
position: relative;
top: 0;
}
.footer{
  text-align: center;
  position: fixed;
  bottom: 0;
  font-size: 24rpx;
  color: gray;
  left: 8%;
}