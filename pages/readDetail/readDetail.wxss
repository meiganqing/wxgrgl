/* 图片 */

.img_box {
  width: 690rpx;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  padding:50rpx;
}

.imgs {
  width: 33.33333333%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.imgs image {
  width: 90%;
  max-height: 212rpx;
  border: 1rpx solid rgba(214, 212, 212, 0.1);
  /* box-shadow: 5rrpx 5rrpx 1rrpx 3rrpx #e2e0e0; */
}

.imgs .images {
  position: relative;
}

.images button {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.img_box .images {
  width: 90%;
  height: 212rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.img_box .images>image {
  width: 60rpx;
  height: 60rpx;
}

